<Application x:Class="Sabirov.WPF._2Lab.DBTest.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Sabirov.WPF._2Lab.DBTest"
             StartupUri="./Pages/MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="/Fonts/#Montserrat Bold"/>
            <Setter Property="FontSize" Value="24px"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="22px"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="/Fonts/#Montserrat Bold"/>
        </Style>
        <Style TargetType="Button">
            <!--<Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>-->
            <Setter Property="FontFamily" Value="/Fonts/#Montserrat Bold"/>
        </Style>
    </Application.Resources>
</Application>
